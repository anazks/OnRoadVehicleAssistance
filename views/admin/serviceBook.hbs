<body
  style="background-image: url(https://images.pexels.com/photos/7130537/pexels-photo-7130537.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1); background-repeat: no-repeat; background-size: cover;">


  <div class="container" style="margin-top:40px">
    <div class="card shadow p-5">
      {{#each result}}
      <div class="card-body">
        <div class="card-header text-muted" style="color: black; font-size: 20px; font-weight: bold;">Shop Name</div>
        <h5 class="card-title " style="color: rgb(0, 0, 0); font-size: 15px;">{{this.username}}</h5>
        <div class="card-header" style="color: black; font-size: 20px; font-weight: bold;">Mail id</div>

        <h5 class="card-title" style="color: black; font-size: 15px;">{{this.useremail}}</h5>
        <div class="card-header " style="color: black; font-size: 20px; font-weight: bold;">Mobile</div>

        <h5 class="card-title ms-5" style="color: black; font-size: 15px;">{{this.usermobile }}</h5>
        <div class="card-header" style="color: black; font-size: 20px; font-weight: bold;">City</div>

        <h5 class="card-title" style="color: black; font-size: 15px;">{{this.city}}</h5>
        <div class="card-header" style="color: black; font-size: 20px; font-weight: bold;">Status</div>

        <h5 class="card-title" style="color: black; font-size: 15px;">{{this.status}}</h5>
        <div class="card-header" style="color: black; font-size: 20px; font-weight: bold;">Time</div>

        <h5 class="card-title" style="color: black; font-size: 15px;">{{this.time}}</h5>
        <div class="card-header" style="color: black; font-size: 20px; font-weight: bold;">Payment status</div>
        <h5 class="card-title" style="color: black; font-size: 15px;">{{this.rs}}.Rs</h5>

      </div>

      <br>

      {{/each}}
    </div>

  </div>

</body>