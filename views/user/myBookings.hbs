
<body style="background-image: url(https://images.pexels.com/photos/7630418/pexels-photo-7630418.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1); background-repeat: no-repeat; background-size: cover;">
  

<div class="container" style="margin-top:40px">
 
  {{#each data}}
  
    <div class="card-body">
      <div class="card-header" style="color: black; font-size: 20px; font-weight: bold;">Shop Name</div>
      <h5 class="card-title" style="color: black; ">{{this.shopname}}</h5>
      <div class="card-header" style="color: black; font-size: 20px; font-weight: bold;">Mail id</div>

      <h5 class="card-title" style="color: black;">{{this.email}}</h5>
      <div class="card-header" style="color: black; font-size: 20px; font-weight: bold;">Mobile</div>

      <h5 class="card-title" style="color: black;">{{this.mobile }}</h5>
      <div class="card-header" style="color: black; font-size: 20px; font-weight: bold;">City</div>

      <h5 class="card-title" style="color: black;">{{this.city}}</h5>
      <div class="card-header" style="color: black; font-size: 20px; font-weight: bold;">Status</div>

      <h5 class="card-title" style="color: black;">{{this.status}}</h5>
      <div class="card-header" style="color: black; font-size: 20px; font-weight: bold;">Time</div>

      <h5 class="card-title" style="color: black;">{{this.time}}</h5>
         <div class="card-header" style="color: black; font-size: 20px; font-weight: bold;">Payment Status</div>
      <h5 class="card-title" style="color: black;">{{this.rs}}</h5>
        <a href="/users/payNow/{{id}}"  class="btn btn-success">PayNow</a>

    </div><br>


{{/each}}

</div>
</body>